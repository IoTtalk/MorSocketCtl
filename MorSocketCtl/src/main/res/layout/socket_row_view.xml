<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:weightSum="1"
    android:layout_height="wrap_content"
    app:layout_collapseParallaxMultiplier="1.0"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/sswitch_icon"
        android:layout_width="50dp"
        android:scaleType="fitCenter"
        android:cropToPadding="false"
        android:adjustViewBounds="true"
        android:background="@drawable/sswitch"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/socket_row_text_view"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:layout_gravity="center_vertical" />

    <!--<Spinner-->
        <!--android:layout_height="fill_parent"-->
        <!--android:id="@+id/appliance_list_spinner"-->
        <!--android:layout_marginStart="13dp"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--android:layout_width="200dp" />-->

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sswitch"
        android:theme="@style/switchTheme"
        android:layout_gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColorLink="?android:attr/textColorLink" />
    <Button
        android:text="------"
        android:layout_height="match_parent"
        android:id="@+id/appliance_list_button"
        android:layout_marginStart="13dp"
        android:layout_gravity="center_vertical"
        android:layout_centerHorizontal="true"
        style="@style/QDRadiusButton"
        android:layout_width="fill_parent"
        android:textSize="24sp" />
</LinearLayout>